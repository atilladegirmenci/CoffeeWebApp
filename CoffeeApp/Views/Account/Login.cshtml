@{
    ViewBag.Title = "Giriş Yap";
}
<h2 class="text-center my-4">Giriş Yap</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login" method="post" class="border p-4 rounded shadow-sm bg-light">
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="text" name="email" id="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telefon:</label>
                <input type="text" name="phone" id="phone" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>

        <p class="text-center mt-3">
            Hesabınız yok mu?
            <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
        </p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center mt-2">@ViewBag.Error</div>
        }
    </div>
</div>
